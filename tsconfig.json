{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, // 允许从没有默认导出的模块引入
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],        
      "@/services/*": [
        "src/services/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/views/*": [
        "src/views/*"
      ] 

    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "json-server/db.js", "src/setup/server.js", "src/setup/server.js", "src/setup/server.js", "json-server/db.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
